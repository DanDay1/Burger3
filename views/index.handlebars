<h1>Cheesy Burger 2.0</h1>


<div class="container">
  <div class="row">
    <div class="col s12">
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Enter Order Here">
        <button type="submit" class="addBurgerButton">Place Order</button>
      </form>
    </div>
  </div>
</div>

<main>

  <div class="container" id="containerBottom">

    <div class="row">

      <div class="col s6">
      <h2>Orders</h2>
      <p>Click item when ready</p>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
      <h2>Order Up!</h2>
       <p>Click item to remove</p>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
               {{!--  {{this.burger_name}} --}}
               <form action="/burgers/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit" class='burgerEaten'> {{this.burger_name}}</button>
              </form>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>

    </div>

  </div>
  
</main>

